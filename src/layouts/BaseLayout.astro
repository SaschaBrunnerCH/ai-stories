---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { buildUrl } from "../utils/url";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Internal knowledge base for developer tips, workflows, and code snippets" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a1a2e" />
    <link rel="icon" type="image/svg+xml" href={buildUrl("/favicon.svg")} />
    <title>{title} | AI Stories</title>
    <script is:inline>
      (function () {
        var theme = localStorage.getItem('theme');
        if (theme === 'light') {
          document.documentElement.classList.remove('dark');
          document.querySelector('meta[name="theme-color"]').setAttribute('content', '#ffffff');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-surface-base dark:text-gray-100 flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
