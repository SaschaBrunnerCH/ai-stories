---
import { getCollection, render, type CollectionEntry } from "astro:content";
import ContentLayout from "../../layouts/ContentLayout.astro";
import CodeBlock from "../../components/CodeBlock.astro";
import { loadCodeFiles } from "../../utils/codeLoader";
import { buildUrl } from "../../utils/url";

export async function getStaticPaths() {
  let entries: CollectionEntry<"aiStories">[] = [];
  try {
    entries = await getCollection("aiStories");
  } catch {
    entries = [];
  }

  return entries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const codeFiles = await loadCodeFiles(entry.data.codeFiles, "./content/ai-stories");

const formattedDate = entry.data.created.toLocaleDateString("en-US", {
  weekday: "long",
  year: "numeric",
  month: "long",
  day: "numeric",
});


const tileSrc = entry.data.tileImage
  ? buildUrl(`/ai-stories/${entry.data.tileImage}`)
  : buildUrl("/ai-story-default-tile.svg");
---

<ContentLayout title={entry.data.title}>
  <article>
    <header class="mb-4">
      <a
        href={buildUrl("/ai-stories")}
        class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 hover:underline mb-2 inline-flex items-center gap-1 text-sm"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to AI stories
      </a>

      <div class="flex items-start gap-2.5 mb-2">
        <svg class="w-5 h-5 flex-shrink-0 mt-1 text-gray-400 dark:text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z" /><path d="M14 2v4a2 2 0 0 0 2 2h4" /><path d="M10 9H8" /><path d="M16 13H8" /><path d="M16 17H8" />
        </svg>
        <div>
          <h1 class="text-xl font-bold text-gray-900 dark:text-gray-100">{entry.data.title}</h1>
          <div class="flex flex-wrap gap-1 mt-1">
            {entry.data.tags.map((tag) => (
              <span class="text-xs bg-gray-200 dark:bg-surface-overlay text-gray-700 dark:text-gray-300 px-2 py-0.5 rounded-full font-medium">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>

      <div class="text-xs text-gray-600 dark:text-gray-400 flex items-center gap-2">
        {entry.data.author?.length > 0 && (
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            {entry.data.author.join(", ")}
          </span>
        )}
        <time datetime={entry.data.created.toISOString()} class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {formattedDate}
        </time>

      </div>
    </header>

    <div class="prose prose-sm max-w-none prose-headings:text-gray-900 dark:prose-invert prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-code:text-pink-600 dark:prose-code:text-pink-400 prose-p:my-2 prose-ul:my-2 prose-ol:my-2 prose-li:my-0.5 prose-headings:mt-4 prose-headings:mb-2">
      <img
        src={tileSrc}
        alt={entry.data.title}
        class="float-right ml-4 mb-2 w-[14.4rem] max-w-[48%] rounded-md border border-gray-200 dark:border-surface-border bg-white"
        loading="lazy"
      />
      <Content />
      <div class="clear-both"></div>
    </div>

    {codeFiles.length > 0 && (
      <section class="mt-6 border-t border-gray-200 dark:border-surface-border pt-4">
        <h2 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3">Code Files</h2>
        {codeFiles.map((file) => (
          <CodeBlock filename={file.filename} code={file.code} language={file.language} />
        ))}
      </section>
    )}
  </article>
</ContentLayout>
